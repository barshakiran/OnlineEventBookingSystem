@model OnlineEventBookingSystemUI.Models.EventDetailViewModel


@using (Html.BeginForm("UpdateLocationEvents", "EventDetail", FormMethod.Post, new { id = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Edit Event Details :--</h4>
    if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
       <span style="color:red;">@Model.ErrorMessage</span> 
      
    }
    <div class="form-horizontal" style="border: solid 1px #ccc; padding: 30px 0 30px 30px; border-radius: 5px; width: 450px; margin: auto; display: table;">

        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Event_Id, htmlAttributes: new { @class = "control-label col-md-2", style = "text-align:left" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Event_Id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Event_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Event_Name, htmlAttributes: new { @class = "control-label col-md-2", style = "text-align:left" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Event_Name)
                @Html.ValidationMessageFor(model => model.Event_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Event_Type, htmlAttributes: new { @class = "control-label col-md-2", style = "text-align:left" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Event_Type, Model.EventTypeList)
                @Html.ValidationMessageFor(model => model.Event_Type, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Event_Description, htmlAttributes: new { @class = "control-label col-md-2", style = "text-align:left" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Event_Description)
                @Html.ValidationMessageFor(model => model.Event_Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Event_Picture, htmlAttributes: new { @class = "control-label col-md-2", style = "text-align:left" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Event_Picture)
                @Html.ValidationMessageFor(model => model.Event_Picture, "", new { @class = "text-danger" })
            </div>
        </div>

        <hr />

        @{ int i = 0;}
        @foreach (var item in Model.EventList)
        {
            <table cellpadding="2" cellspacing="2" width="650">
                <tr>
                    <td valign="top">
                        @Html.LabelFor(model => item.Location_Id)
                    </td>
                    <td></td>
                    <td>

                        @Html.DropDownListFor(model => item.Location_Id, item.Cities, new { @Name = "[" + i + "].Location_Id" })
                        <div style="height: 20px;">
                            @Html.ValidationMessageFor(model => item.Location_Id, "", new { @class = "text-danger" })
                        </div>
                    </td>
                    <td></td>


                    <td valign="top">
                        @Html.LabelFor(model => item.EventLocation_Price)
                    </td>
                    <td height="10">
                        @Html.EditorFor(model => item.EventLocation_Price, null, new { htmlAttributes = new { @Name = "[" + i + "].EventLocation_Price" } })
                        <div style="height: 20px;">
                            @Html.ValidationMessageFor(model => item.EventLocation_Price, "", new { @class = "text-danger" })
                        </div>
                    </td>

                    <td valign="top">
                        @Html.LabelFor(model => item.EventLocation_DateAndTime)
                    </td>
                    <td height="10">
                        @Html.EditorFor(model => item.EventLocation_DateAndTime, null, new { htmlAttributes = new { @Name = "[" + i + "].EventLocation_DateAndTime" } })
                        <div style="height: 20px;">
                            @Html.ValidationMessageFor(model => item.EventLocation_DateAndTime, "", new { @class = "text-danger" })
                        </div>
                    </td>
                </tr>
            </table>
            i++;
        }

        <div class="form-group" style="align-self:end">
            <div class="col-md-offset-2 col-md-10" style="align-items:end">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
